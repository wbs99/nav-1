/* css reset */
* {box-sizing: border-box;}
*:before, *:after {box-sizing: border-box;}
* {margin: 0; padding: 0;}
ul, ol { list-style: none; }
a {color: inherit; text-decoration: none;}
img {max-width: 100%; max-height: 100%;}

/* style */

body{background-color: #eee;} /*给 body 加一个背景色，浏览器会智能的把颜色扩展到整个网页*/
.globalHeader {
    margin: 33px 27px;
    display: flex;
    justify-content: space-between;
}
.globalHeader > input {
    width: 100%;
    margin-right: 10px;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.globalHeader > button {
    white-space: nowrap; /*让搜索两个字不要换行*/
    padding: 0 10px;
    border: none;
    border-radius: 4px; /*写 border 先写 none 或者覆盖掉*/
    background-color: 28, 115, 207;
}

